    {% extends '::base.html.twig' %}

{% block body %}
    <h1>Pilier list</h1>

    {% if entities %}
    <table class="records_list table table-condensed table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Categorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pilier_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.categorie }}</td>
                <td>
    <a class="btn" href="{{ path('pilier_show', { 'id': entity.id }) }}">show</a>
    <a class="btn" href="{{ path('pilier_edit', { 'id': entity.id }) }}">edit</a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="no-records-msg">
            There is no saved records
        </div>
    {% endif %}

        <a class="btn btn-success" href="{{ path('pilier_new') }}">
        Create a new entry
    </a>
    {% endblock %}
