{% trans_default_domain 'GeolocationUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

<div class="container">
    <div id="message-request">
        <h2>{{ 'resetting.reset.title'|trans }}</h2>
        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST"
              class="fos_user_resetting_reset">
            {{ form_widget(form) }}
            <div>
                <input class="btn btn-success" type="submit" value="{{ 'resetting.reset.submit'|trans }}"/>
            </div>
        </form>
    </div>
</div>