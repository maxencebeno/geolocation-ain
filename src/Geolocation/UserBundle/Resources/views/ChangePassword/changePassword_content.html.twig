{% trans_default_domain 'GeolocationUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div id="fos_user_user_change-password form-group">
                <div class="panel panel-default">
                    <div class="panel-heading"><h3>{{ 'change_password.title'|trans }}</h3></div>
                    <div class="panel-body">
                        {% form_theme form 'GeolocationUserBundle:Form:error.html.twig' %}
                        {{ form_start(form) }}
                        {{ form_errors(form) }}

                        <span class="form-cp-label">{{ form_label(form.plainPassword.first) }}</span>

                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'cp-form-input form-control', 'autocomplete': 'off', 'spellcheck': 'false'}}) }}
                        <span class="form-error" id="error-surname">{{ form_errors(form.plainPassword.first) }}</span>

                        <span class="form-cp-label">{{ form_label(form.plainPassword.second) }}</span>
                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'cp-form-input form-control', 'autocomplete': 'off', 'spellcheck': 'false'}}) }}
                        <span class="form-error" id="error-email">{{ form_errors(form.plainPassword.second) }}</span>

                        <input class="btn btn-success" type="submit" value="{{ 'change_password.submit'|trans }}" id="cp-submit" />
                        {{ form_end(form) }}

                        <p><a href="{{ path('fos_user_profile_show') }}">{{ 'change_password.back_on_profile'|trans }}</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>