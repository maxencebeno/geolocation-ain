{% extends 'GeolocationAdminBundle::layout.html.twig' %}
{% trans_default_domain 'adresse' %}

{% block title %}
    {{ parent() }} - {{ 'views.show.show'|trans({'%entity%': 'Adresse'}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

    <h1>{{ 'address.production_site'|trans }}</h1>

    <form class="form-horizontal">
        <fieldset>        
            <div class="control-group">
                <label class="control-label">{{ 'address.id'|trans }}</label>
                <div class="controls">   
                    <span class="input-xlarge uneditable-input">{{ entity.id }}</span> 
                </div>
            </div>      
            <div class="control-group">
                <label class="control-label">{{ 'address.name'|trans }}</label>
                <div class="controls">               
                    <span class="input-xlarge uneditable-input">{{ entity.nom }}</span>    
                </div>
            </div>     
            <div class="control-group">
                <label class="control-label">{{ 'address.address'|trans }}</label>
                <div class="controls">               
                    <span class="input-xlarge uneditable-input">{{ entity.adresse }}</span>      
                </div>
            </div>          
            <div class="control-group">
                <label class="control-label">{{ 'address.city'|trans }}</label>
                <div class="controls">               
                    <span class="input-xlarge uneditable-input">{{ entity.ville }}</span>    
                </div>
            </div>        
            <div class="control-group">
                <label class="control-label">{{ 'address.zipcode'|trans }}</label>
                <div class="controls">             
                    <span class="input-xlarge uneditable-input">{{ entity.codePostal }}</span>       
                </div>
            </div>       
            <div class="control-group">
                <label class="control-label">{{ 'address.phone'|trans }}</label>
                <div class="controls">            
                    <span class="input-xlarge uneditable-input">{{ entity.tel }}</span>          
                </div>
            </div>       
            <div class="control-group">
                <label class="control-label">{{ 'address.phoneVisible'|trans }}</label>
                <div class="controls">               
                    <input type="checkbox" class="uneditable-input" value="{{ entity.isPublic }}">     
                </div>
            </div>      
            <div class="control-group">
                <label class="control-label">{{ 'address.siret'|trans }}</label>
                <div class="controls">              
                    <span class="input-xlarge uneditable-input">{{ entity.siret }}</span>    
                </div>
            </div>     
            <div class="control-group">
                <label class="control-label">{{ 'address.iso'|trans }}</label>
                <div class="controls">         
                    <div id="geolocation_adminbundle_adresse_iso">
                        {% if isoAlreadyIn != null %}
                            <ul>
                                {% for iso in isoAlreadyIn %}                                
                                    <li>{{ iso.isoId.codeIso }}  
                                        {% if iso.isoId.codeIso == "Autre" %}
                                            : {{ iso.autre }}
                                        {% endif %}

                                        -
                                        {% if iso.certifie != null %}
                                            {{ 'address.iso_certifie'|trans }} {{ iso.dateCertification.date|date("d/m/Y") }}
                                        {% else%}
                                            {{ 'address.iso_en_cours'|trans }}
                                        {% endif%}
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else%}
                            <p>{{ 'address.no_iso'|trans }}</p>
                        {% endif%}
                    </div>             
                </div>
            </div>
        </fieldset>
    </form>

    <div>
        <div class="float-left">
            <a class="btn" href="{{ path('adresse') }}">
                {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </a>
        </div>
        <div class="float-left">
            <a class="btn btn-primary" href="{{ path('adresse_edit', { 'id': entity.id }) }}">
                {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
            </a>
        </div>
        <div class="float-left">
            <form action="{{ path('adresse_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle')|escape('js') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
            </form>
        </div>
    </div>
{% endblock %}
